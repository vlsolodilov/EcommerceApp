<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RegularText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="SecondaryText" parent="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="LargeText" parent="TitleText">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:indeterminateTint">@color/primary_500</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary_500</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="OutlinedIconButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">90dp</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="editTextStyle">@style/SecondaryText</item>
        <item name="android:editTextColor">@color/primary_500</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/roboto_medium</item>

        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>